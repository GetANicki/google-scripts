{
  "compilerOptions": {
    "target": "ESNEXT",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["es6"],
    "strict": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "rootDir": "./src"
  },
  "include": ["./src/**/*.ts"]
}
